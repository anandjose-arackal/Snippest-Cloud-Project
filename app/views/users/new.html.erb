<section id="registration" class="container">
 <!-- <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">-->
  <div class="center">
    <%= form_for @user , :class => "center" do |f| %>
      <fieldset class="registration-form">
      <div class="form-group">
              <%= f.text_field :name, class: "form-control" , placeholder: "Full Name"%>
      </div>
      <div class="form-group">
                <%=f.text_field :emailid , class: "form-control" , placeholder: "Valid Email"  %>
      </div> 
      <div class="form-group">
              <%=f.password_field :password, class: "form-control" , placeholder: "Password"%>
      </div>
      <div class="form-group">
            <%= submit_tag "Save" , class:"btn btn-success btn-md btn-block" %>
      </div> 
      </fieldset>
    <% end %> 
  </div>  
</section> 

