<section id ="title" class="emerald">
  <div class="container">

     <div class="row">
                <div class="col-sm-6">
                    <h2>Submit a new Article</h2>
                </div>
                <div class="col-sm-6">
                    <ul class="breadcrumb pull-right">
                        <li><a href="index.html">Home</a></li>
                        <li class="active">Submit Article</li>
                    </ul> 
                </div>
      </div>
  </div>
</section>

<section id="newpost" class="container">
   <div class="col-md-8 col-md-offset-2">
     <%= form_for @post do |f| %>
         <div class="form-group">
           <label>Heading</label>
           <%= f.text_field :post_heading , class: "form-control" , placeholder: "Heading must be self explanatory" %>
         </div>
         <div class="form-group">
           <label>Descrption</label>
          <%= f.text_area :post_description ,rows:4, class: "form-control" , placeholder: "Brief Descrption about your article" %>
         </div>
         <div class="form-group">
            <label>Article here</label>
            <%#= f.text_area :post_content , rows: 12, class: "form-control" , placeholder: "Write your Article here" %>
            <%= quill_editor nil, { name: 'post[post_content]', value: 'Write article here' } %>
         </div>
         <div class="form-group">
           <label>Tags</label>
           <%= f.text_field :post_tags , class: "form-control" , placeholder: "tags make searching eazy" %>
         </div>
         <div class="form-group">
             <%= submit_tag "Save" , class:"btn btn-success btn-md btn-block" %>
         </div>

     <% end %>
   </div>
</section>